@{
    ViewData["Title"] = "Basket";
}
@model List<BasketViewModel>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Count</th>
                <th scope="col">Total</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
             {
                <tr>
                    <th scope="row"><img style=" width:50px; height:50px" src="~/img/@item.Image" /></th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td style="font-size:20px">
                        <a  asp-controller="home" asp-action="Decrement" asp-route-id="@item.Id">-</a>
                        @item.Count
                        <a  asp-controller="home" asp-action="Increment" asp-route-id="@item.Id">+</a>
                    </td>
                    <td>@item.TotalPrice</td>
                    <td> <a asp-controller="home" asp-action="Delete" asp-route-id="@item.Id">delete</a></td>
                </tr>
             }
        </tbody>
    </table>
</div>